{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "name": {
        "type": "object",
        "properties": {
          "common": { "type": "string" },
          "official": { "type": "string" }
        },
        "required": ["common", "official"]
      },
      "capital": {
        "type": "array",
        "items": { "type": "string" },
        "minItems": 1
      },
      "region": { "type": "string" }
    },
    "required": ["name", "capital", "region"]
  }
}